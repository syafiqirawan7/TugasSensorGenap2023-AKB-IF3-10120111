<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".ProfileFragment">




    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/foto"
            android:layout_width="297dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/foto" />

        <TextView
            android:id="@+id/txt_nama"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/foto"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:elevation="12dp"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="Syafiq Pramana Irawan"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_nim"
            android:layout_width="302dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_nama"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:elevation="12dp"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="10120111"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_kelas"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_nim"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:elevation="12dp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="IF-3"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_kelas"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:elevation="12dp"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="syafiqirawan7@gmail.com"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>